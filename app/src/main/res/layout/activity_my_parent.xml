<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackgroundGray"
    android:orientation="vertical"
    tools:context="com.ss.education.ui.activity.parent.MyParentActivity">

    <include
        layout="@layout/include_header_topic"/>

    <com.ss.education.customview.CustomSwipeRefresh
        android:id="@+id/layout_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/jiazhang_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/x10"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="您有一条家长申请"
                        android:textColor="@color/redFE46"
                        android:textSize="14sp"/>

                    <View
                        style="@style/grayline"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/white"
                    android:padding="@dimen/x10"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="家长姓名："
                        android:textColor="@color/blackText"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/j_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="right"
                        android:maxLength="10"
                        android:text=""
                        android:textColor="@color/blackText"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/white"
                    android:padding="@dimen/x10"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="家长号码："
                        android:textColor="@color/blackText"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/j_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="right"
                        android:maxLength="10"
                        android:text="13091617887"
                        android:textColor="@color/blackText"
                        android:textSize="16sp"/>
                </LinearLayout>

                <View
                    style="@style/grayline"/>
            </LinearLayout>

            <TextView
                android:id="@+id/add_parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/bg_textview_big_corner_topic"
                android:gravity="center"
                android:text="添加家长"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible"
                />
        </LinearLayout>
    </com.ss.education.customview.CustomSwipeRefresh>


</LinearLayout>
