<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x40"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTopic"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10">

        <RelativeLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:layout_weight="1"
            android:background="@drawable/bg_big_corner_white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10">


            <ImageView
                android:id="@+id/ii_search"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/edit"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_search"/>

            <EditText
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@+id/ii_search"
                android:background="@null"
                android:hint="@string/search_student"
                android:imeOptions="actionSearch"
                android:scrollbars="horizontal"
                android:singleLine="true"
                android:textColor="@color/grayText"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/cha"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_cha"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:visibility="visible"/>

    </LinearLayout>
</LinearLayout>