<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal">

    <!--开始三条语音-->
    <!--1s/5dp,最短长度为20s,也就是100dp-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x8">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp"
            >
            <!--语音条-->
            <ImageView
                android:id="@+id/iclv_iv_voiceLine"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/voice_bg"
                android:clickable="true"
                android:focusable="true"
                android:lineSpacingExtra="2dp"
                android:maxWidth="220dp"
                android:minWidth="90dp"
                android:paddingLeft="@dimen/x24"
                android:paddingRight="@dimen/x24"
                />
            <!--信号栏-->
            <LinearLayout
                android:id="@+id/iclv_ll_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/animation_voice_right"
                android:orientation="horizontal"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/iav_tv_voicetime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x8"
            android:text="60 ''"
            android:textColor="@color/colorBlowLabel"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iav_iv_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x8"
            android:src="@drawable/yuyin_tixing"
            android:visibility="gone"
            />
    </LinearLayout>

</LinearLayout>