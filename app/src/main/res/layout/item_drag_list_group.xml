<?xml version="1.0" encoding="utf-8"?>
<!-- 一定要使用相对布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/drag_item_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y25"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/drag_item_close_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        >

        <ImageView
            android:id="@+id/delete_img"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_item_close"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/drag_item_image"
        android:layout_width="@dimen/x20"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:src="@drawable/icon_item_move"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/drag_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/drag_item_image"
        android:layout_toRightOf="@id/drag_item_close_layout"
        android:gravity="center"
        android:text="sdfsdf"
        android:textColor="@color/blackText"
        android:textSize="16sp"/>

</RelativeLayout>