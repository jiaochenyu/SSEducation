<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackgroundGray"
    android:orientation="vertical"
    tools:context="com.ss.education.ui.activity.examination.PracticeActivity">

    <include
        layout="@layout/include_header_topic"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:dividerHeight="0.5dp"
        android:listSelector="@color/transparent">
    </ListView>

    <RelativeLayout
        android:id="@+id/null_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/data_null"/>
    </RelativeLayout>

    <Button
        android:id="@+id/practice_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_gravity="center"
        android:background="@color/colorTopic"
        android:text="@string/next"
        android:textColor="@color/blackText"
        android:visibility="gone"/>

</LinearLayout>
