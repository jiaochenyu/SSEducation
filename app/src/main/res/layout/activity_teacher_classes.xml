<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ss.education.ui.activity.classes.TeacherClassesShenheActivity">

    <include
        layout="@layout/include_header_topic"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

        </android.support.design.widget.TabLayout>

        <View
            style="@style/grayline"
            android:layout_width="@dimen/x3"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5"/>
    </RelativeLayout>

    <View
        style="@style/grayline"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/colorTopic"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/refuse"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grayBA"
            android:gravity="center"
            android:text="拒绝"
            android:textColor="@color/blackText"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/blackText"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
