<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ss.education.ui.activity.setting.AboutUsActivity">

    <include
        layout="@layout/include_header_topic"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x10"
            android:src="@drawable/about_us_logo"/>


        <me.codeboy.android.aligntextview.AlignTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            android:lineSpacingExtra="@dimen/x3"
            android:padding="@dimen/x10"
            android:text="@string/about_us"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/about_us_copyright"
            android:textSize="14sp"/>
    </LinearLayout>


</LinearLayout>
