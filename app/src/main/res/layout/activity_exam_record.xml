<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackgroundGray"
    android:orientation="vertical"
    tools:context="com.ss.education.ui.activity.examination.ExamRecordActivity">

    <include
        layout="@layout/include_header_topic"/>

    <include
        layout="@layout/include_search_header"
        android:visibility="gone"/>

    <View
        style="@style/grayline"/>

    <com.ss.education.customview.popupwindow.ExpandTabView
        android:id="@+id/expandtabTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/colorTopic"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/layout_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@null"
                app:dividerHeight="0.5dp">
            </ListView>


            <RelativeLayout
                android:id="@+id/null_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/data_null"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <View
        android:id="@+id/pop_bg_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/tran1f"
        android:visibility="gone"/>
</LinearLayout>
